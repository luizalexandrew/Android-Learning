<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brain.myapplicationimc.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/telefone"
        android:layout_alignStart="@+id/telefone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/telefone"
        android:layout_below="@+id/nome"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textView"
        android:layout_above="@+id/telefone"
        android:layout_alignParentStart="true"
        android:width="20dp"
        android:layout_toStartOf="@+id/nome"
        android:textSize="20dp"
        android:layout_alignTop="@+id/nome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:id="@+id/textView2"
        android:width="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/nome"
        android:layout_above="@+id/email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView3"
        android:width="20dp"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/email"
        android:layout_toStartOf="@+id/email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:id="@+id/textView4"
        android:width="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/peso"
        android:layout_toStartOf="@+id/peso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:id="@+id/textView5"
        android:width="20dp"
        android:textSize="20dp"
        android:layout_alignTop="@+id/altura"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/altura"
        android:layout_toStartOf="@+id/altura" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/button"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/email"
        android:layout_marginEnd="59dp"
        android:onClick="enviardados" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/peso"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/altura"
        android:layout_below="@+id/peso"
        android:layout_alignStart="@+id/peso" />

</RelativeLayout>
